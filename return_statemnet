###############3python _classes################
class Point:
    def move(self):
        print("move")

    def draw(self):
        print("draw")

point1 = Point()
point1.draw()

###########class_constructor############
class Point:
    def __init__(self,x,y):
        self.x = x
        self.y = y

    def move(self):
        print("move")

    def draw(self):
        print("draw")

point1 = Point(10,20)
print(point1.x)

###########2_example#######
class Person:
    def __init__(self,name):
        self.name = name

    def talk(self):
        print("talk")

john= Person("Padma")
print(john.name)
#################33_Example############
class Person:
    def __init__(self,name):
        self.name = name

    def talk(self):
        print(f"hi, i am {self.name}")

john= Person("Padma")
john.talk()

bob = Person("bob smith")
bob.talk()

#####################python_inheritence########################
class Animal:
    def walk(self):
        print("walk")

class Dog(Animal):
    def bark(self):
        print("bark")

class Cat(Animal):
    def be_annoy(self):
        print("annoying")

dog1 = Dog()
dog1.walk()
dog1.bark()



